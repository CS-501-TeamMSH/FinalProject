<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


        <TextView
            android:id="@+id/signOutButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="25sp"
            android:textSize="16sp"
            android:text="Sign Out"
            android:textColor="#0000FF"
            android:onClick="signOut"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dashtitle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40sp"
            android:layout_marginStart="16dp"
            android:textSize="28sp"
            android:text="Compliance Dashboard"
            android:textAppearance="@font/ubuntu_bold"
            app:layout_constraintTop_toTopOf="@id/signOutButton"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/date" />

        <TextView
            android:id="@+id/date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="12sp"
            android:textSize="16sp"
            android:textAppearance="@font/ubuntu_bold"
            app:layout_constraintTop_toBottomOf="@id/dashtitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/calendarButton" /> <!-- Constraint to the calendar button -->

        <ImageButton
            android:id="@+id/calendarButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="18dp"
            android:layout_marginTop="8sp"
            android:layout_marginEnd="12sp"
            android:src="@drawable/baseline_calendar_month_24"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Calendar"
            android:textSize="12sp"
            app:layout_constraintTop_toTopOf="@id/date"
            app:layout_constraintEnd_toEndOf="parent" />



        <ImageButton
            android:id="@+id/addImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20sp"
            android:layout_marginEnd="12sp"
            android:src="@drawable/baseline_add_24"
            android:background="?android:selectableItemBackground"
            android:contentDescription="Add"
            android:scaleType="centerInside"
            android:onClick="onPlusButtonClick"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/noImageText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:paddingTop="18dp"
            android:textSize="25sp"
            app:layout_constraintTop_toBottomOf="@id/date"
            app:layout_constraintStart_toStartOf="parent"
            android:textAlignment="center"/>

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            android:src="@drawable/baseline_add_24"
            app:tint="@android:color/white"
            app:backgroundTint="@color/md_theme_primary"
            app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.FloatingActionButton"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />


        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recycler"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="15dp"
            android:layout_marginStart="25dp"
            android:layout_marginEnd="25dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/calendarButton" />




</androidx.constraintlayout.widget.ConstraintLayout>
